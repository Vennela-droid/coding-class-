import java.util.*;
class Prefix
{
public static void main(String args[])
  {
   Scanner sc=new Scanner(System.in);
   int q=sc.nextInt();
   int n=1000;
   int[] p=new int[n+1];
   p[0]=0;
   for(int i=1;i<n+1;i++)
   {
     p[i]=p[i-1]+2*i;
      
   }   
      for(int j=0;j<=q;j++)
       {
         int sum=sc.nextInt();
         System.out.println(p[sum]);   
       }
   
  }
}
